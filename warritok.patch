+import React, { useEffect, useState } from 'react';
+import CoinPackCard from '../components/CoinPackCard';
+import api from '../api/client';
+
+type Pack = {
+  id: string;
+  coins: number;
+  priceUSD: number;
+  description?: string;
+};
+
+export default function Home() {
+  const [packs, setPacks] = useState<Pack[]>([]);
+  const [loading, setLoading] = useState(false);
+  const [message, setMessage] = useState<string | null>(null);
+
+  useEffect(() => {
+    setLoading(true);
+    api.get('/coin-packs')
+      .then(res => setPacks(res.data || []))
+      .catch(() => setMessage('Failed to load coin packs. Is the backend running?'))
+      .finally(() => setLoading(false));
+  }, []);
+
+  const handleBuy = async (packId: string) => {
+    setMessage(null);
+    try {
+      // demo user id hard-coded for quick start
+      const userId = 'demo-user-1';
+      const idempotencyKey = cryptoRandomId();
+      const resp = await api.post(`/users/${userId}/purchase`, { packId }, { headers: { 'Idempotency-Key': idempotencyKey }});
+      setMessage(`Transaction created: ${resp.data.transactionId} (status=${resp.data.status})`);
+    } catch (err: any) {
+      setMessage(err?.response?.data?.message || 'Purchase failed (is backend reachable?)');
+    }
+  };
+
+  return (
+    <div>
+      <h2 className="text-2xl font-semibold mb-4">Coin Packs</h2>
+      {loading && <p className="text-sm text-slate-500">Loading packs…</p>}
+      {message && <div className="my-4 p-3 bg-amber-50 border border-amber-200 rounded">{message}</div>}
+      <div className="grid grid-cols-1 sm:grid-cols-2 gap-4">
+        {packs.map(p => (
+          <CoinPackCard key={p.id} pack={p} onBuy={() => handleBuy(p.id)} />
+        ))}
+      </div>
+      <div className="mt-8 text-sm text-slate-500">
+        This is a demo UI that calls the simulator backend. Configure the backend URL in <code className="bg-slate-100 px-1 rounded">.env</code>.
+      </div>
+    </div>
+  );
+}
+
+function cryptoRandomId() {
+  return (crypto && (crypto as any).randomUUID ? (crypto as any).randomUUID() : Math.random().toString(36).slice(2));
+}
