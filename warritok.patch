+/* A small in-browser mock API client that simulates the same endpoints as the real backend.
+   Use by setting VITE_USE_MOCK=true in web/.env
+*/
+type Pack = { id: string; coins: number; priceUSD: number; description?: string };
+type Tx = { id: string; userId: string; packId: string; coins: number; amountUSD: number; status: string; createdAt: string };
+
+const wait = (ms: number) => new Promise(r => setTimeout(r, ms));
+
+const defaultPacks: Pack[] = [
+  { id: 'pack_small', coins: 100, priceUSD: 0.99, description: 'Small pack' },
+  { id: 'pack_medium', coins: 550, priceUSD: 4.99, description: 'Best value' },
+  { id: 'pack_large', coins: 1200, priceUSD: 9.99, description: 'Popular' },
+  { id: 'pack_xl', coins: 2600, priceUSD: 19.99, description: 'XL' }
+];
+
+const store = {
+  users: { 'demo-user-1': { id: 'demo-user-1', displayName: 'Demo', balance: 0 } },
+  packs: defaultPacks,
+  transactions: [] as Tx[]
+};
+
+function randDelay() {
+  return 500 + Math.floor(Math.random() * 1200);
+}
+
+function genId() {
+  return Math.random().toString(36).slice(2, 10);
+}
+
+const mockClient = {
+  get: async (url: string) => {
+    if (url === '/coin-packs') {
+      await wait(randDelay());
+      return { data: store.packs };
+    }
+    if (url.startsWith('/users/') && url.endsWith('/balance')) {
+      await wait(100);
+      const userId = url.split('/')[2];
+      const u = store.users[userId];
+      return { data: { userId, balance: u ? u.balance : 0 } };
+    }
+    if (url.startsWith('/transactions')) {
+      const uParam = new URLSearchParams(url.split('?')[1] || '');
+      const uid = uParam.get('userId');
+      const txs = uid ? store.transactions.filter(t => t.userId === uid) : store.transactions;
+      await wait(150);
+      return { data: txs };
+    }
+    return { data: null };
+  },
+
+  post: async (url: string, body?: any, conf?: any) => {
+    if (url.startsWith('/users/') && url.endsWith('/purchase')) {
+      const userId = url.split('/')[2];
+      const { packId } = body || {};
+      const pack = store.packs.find(p => p.id === packId);
+      if (!pack) throw { response: { data: { message: 'pack not found' } } };
+      const idempotencyKey = conf?.headers?.['Idempotency-Key'] || null;
+      // idempotency check
+      if (idempotencyKey) {
+        const existing = store.transactions.find(t => (t as any).idempotencyKey === idempotencyKey && t.userId === userId && t.packId === packId);
+        if (existing) return { data: { transactionId: existing.id, status: existing.status } };
+      }
+      const txId = genId();
+      const createdAt = new Date().toISOString();
+      const tx: Tx = { id: txId, userId, packId, coins: pack.coins, amountUSD: pack.priceUSD, status: 'pending', createdAt };
+      (tx as any).idempotencyKey = idempotencyKey;
+      store.transactions.push(tx);
+      // simulate completion
+      setTimeout(() => {
+        const succeed = Math.random() < 0.98;
+        tx.status = succeed ? 'succeeded' : 'failed';
+        if (succeed) {
+          store.users[userId] = store.users[userId] || { id: userId, displayName: userId, balance: 0 };
+          store.users[userId].balance += tx.coins;
+        }
+      }, randDelay());
+      return { data: { transactionId: txId, status: 'pending', estimatedCompletion: new Date(Date.now() + 1000 + Math.random()*1000).toISOString() } };
+    }
+
+    if (url === '/webhooks/register') {
+      const id = genId();
+      await wait(150);
+      return { data: { id, url: body?.url } };
+    }
+
+    return { data: null };
+  }
+};
+
+export default mockClient;
